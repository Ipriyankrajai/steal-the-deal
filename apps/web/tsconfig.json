{
  "extends": "@steal-the-deal/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {"@/*": ["./*"]},
    "plugins": [
      {
        "name": "next",
      },
    ],
  },
  "include": [
    "next-env.d.ts",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
  ],
  "exclude": ["node_modules"],
}
